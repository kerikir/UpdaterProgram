<Window x:Class="UpdaterFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UpdaterFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Текущая версия:" Height="30" Width="200" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" Margin="10" TextAlignment="Right"/>
        <TextBlock x:Name="tblcurrentVersion" Height="30" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" FontSize="18" Margin="10"/>
        <Button x:Name="btnUpdate" Content="Проверка обновления" Height="50" Width="150" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Click="btnUpdate_Click" Grid.Column="2" Grid.Row="3"/>
        <Button x:Name="btnDelete" Content="Остановка скачивания" Height="50" Width="150" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Click="btnStopDownload_Click" Grid.Column="1" Grid.Row="3" Visibility="Hidden"/>

        <ProgressBar x:Name="pbUploading" Height="30" Value="{Binding Path=Progress}" Minimum="0" Maximum="100" VerticalAlignment="Bottom" Margin="20, 50, 20, 20" Visibility="Hidden" Grid.Column="1" Grid.Row="2"/>
        <TextBlock x:Name="tbUploadingSpeed" Text="{Binding Path=Speed}" VerticalAlignment="Center" Margin="20, 20, 10, 10" Grid.Column="1" Grid.Row="2"/>

    </Grid>
</Window>
